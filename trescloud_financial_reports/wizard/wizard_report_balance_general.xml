<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="general_balance_wizard" model="ir.ui.view">
        <field name="name">General Balance</field>
        <field name="model">wizard.report.balance.general</field>
        <field name="arch" type="xml">
            <form>
                <group name="main_info">
                    <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                </group>
                <div>
                    <group name="filters">
                        <group name="date_range">
                            <field name="date_from" string="Cut Date" invisible="1"/>
                            <field name="date_to"/>
                            <field name="level"/>
                        </group>
                        <group name="other_filters">
                            <field name="target_move" widget="radio"/>
                            <field name="hide_account_balance_at_0"/>
                        </group>
                    </group>
                </div>
                <footer>
                    <div>
                        <button name="button_export" string="Export" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </div>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_general_balance_wizard" model="ir.actions.act_window">
        <field name="name">Balance de Situaci√≥n (Excel)</field>
        <field name="res_model">wizard.report.balance.general</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="general_balance_wizard" />
        <field name="target">new</field>
    </record>

</odoo>
