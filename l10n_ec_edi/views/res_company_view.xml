<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
	<record id="view_company_electronic_form" model="ir.ui.view">
		<field name="name">view.company.electronic.form</field>
		<field name="model">res.company</field>
		<field name="inherit_id" ref="base.view_company_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='company_registry']" position="after">
				<field name="l10n_ec_special_contributor_number"/>
				<field name="l10n_ec_forced_accounting" widget="boolean_toggle"/>
				<field name="l10n_ec_legal_name"/>
				<field name="l10n_ec_environment_type"/>
				<field name="l10n_ec_regime"/>
				<field name="l10n_ec_withhold_agent"/>
				<field name="l10n_ec_wihhold_agent_number" attrs="{'invisible':[('l10n_ec_withhold_agent', '==', 'not_designated')]}" />
				<field name="l10n_ec_digital_cert_id"/>
				<field name="l10n_ec_refund_value_control"/>
			</xpath>
		</field>
   	 </record>

</odoo>
