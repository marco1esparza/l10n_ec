<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<record id="view_printer_point_form" model="ir.ui.view">
		<field name="name">view.printer.point.form</field>
		<field name="model">l10n_ec.sri.printer.point</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
            <form string="Printer Point">
	    		<sheet>
					<group>
						<group name="group_left" string="Printer Point">
							<field name="name" required="1"/>
							<field name="printer_point_address"/>
							<field name="allow_electronic_document"/>
							<field name="automatic_numbering"/>
							<field name="company_id" groups="base.group_multi_company" required="1"/>
						</group>
					</group>
				</sheet>
				<div class="oe_chatter">
                	<field name="message_follower_ids" widget="mail_followers"/>
                  	<field name="message_ids" widget="mail_thread"/>
				</div>
			</form>
		</field>
	</record>

	<record id="view_printer_point_tree" model="ir.ui.view">
		<field name="name">view.printer.point.tree</field>
		<field name="model">l10n_ec.sri.printer.point</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Printer Point" decoration-muted="(not active)">
				<field name="sequence" widget="handle"/>
			    <field name="name"/>
			    <field name="allow_electronic_document"/>
			    <field name="automatic_numbering"/>
			    <field name="company_id"/>
				<field name="active" widget="boolean_toggle"/>
			</tree>
		</field>
	</record>

	<record id="action_view_printer_point" model="ir.actions.act_window">
		<field name="name">Punto de emisi√≥n</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">l10n_ec.sri.printer.point</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
	      <p class="oe_view_nocontent_create">
	        Click to define a new printer point.
	      </p><p>
	        Define the printing points used by your company.
	      </p>
	    </field>
	</record>

	<menuitem id="action_sri_menu" name="SRI" parent="account.menu_finance_configuration" sequence="4"/>

	<menuitem id="menu_view_printer_point" action="action_view_printer_point" parent="action_sri_menu" sequence="2"/>

</odoo>
