<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_journal_use_document_form" model="ir.ui.view">
            <field name="name">view.account.journal.use.document.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
				<xpath expr="//field[@name='type']" position="after">
					<field name="l10n_ec_withhold_type" attrs="{'invisible': [('type', '!=', 'general')]}"/>
					<field name="l10n_latam_use_documents" attrs="{'invisible': ['|', '|', ('l10n_latam_company_use_documents', '=', False), ('type', '!=', 'general'), ('l10n_ec_withhold_type', '!=', 'in_withhold')]}"/>
					<field name="l10n_ec_entity"
                           attrs="{'invisible':['|', '|', '|', ('country_code', '!=', 'EC'), ('l10n_latam_use_documents', '=', False), ('type', '!=', 'general'), ('l10n_ec_withhold_type', '!=', 'in_withhold')], 'required':[('country_code', '=', 'EC'), ('l10n_latam_use_documents', '=', True), ('type', '=', 'general'), ('l10n_ec_withhold_type', '=', 'in_withhold')]}"
					/>
                    <field name="l10n_ec_emission"
                           attrs="{'invisible':['|', '|', '|', ('country_code', '!=', 'EC'), ('l10n_latam_use_documents', '=', False), ('type', '!=', 'general'), ('l10n_ec_withhold_type', '!=', 'in_withhold')], 'required':[('country_code', '=', 'EC'), ('l10n_latam_use_documents', '=', True), ('type', '=', 'general'), ('l10n_ec_withhold_type', '=', 'in_withhold')]}"
                    />
					<field name="l10n_ec_emission_address_id"
                           attrs="{'invisible':['|', '|', '|', ('country_code', '!=', 'EC'), ('l10n_latam_use_documents', '=', False), ('type', '!=', 'general'), ('l10n_ec_withhold_type', '!=', 'in_withhold')], 'required':[('country_code', '=', 'EC'), ('l10n_latam_use_documents', '=', True), ('type', '=', 'general'), ('l10n_ec_withhold_type', '=', 'in_withhold')]}"
                    />
				</xpath>
            </field>
        </record>

    </data>
</odoo>
