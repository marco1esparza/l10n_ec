<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_company_shipment_form" model="ir.ui.view">
		<field name="name">view.company.shipment.form</field>
		<field name="model">res.company</field>
		<field name="inherit_id" ref="l10n_ec_edi.view_company_electronic_form"/>
		<field name="arch" type="xml">
			<xpath expr="//page[@name='ecuadorian_configuration']" position="inside">
				<group colspan="4" col="4">
						<group name="shipment_information" string="Guias de Remision" colspan="2" col="2">
							<field name="days_for_valid_waybill"/>
							<field name="l10n_ec_edi_waybill_account_id" />
						</group>
				</group>
	   		</xpath>
		</field>
   	 </record>
</odoo>