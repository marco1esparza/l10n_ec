<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

    	<record id="view_move_tax_support_form" model="ir.ui.view">
            <field name="name">view.move.tax.support.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="l10n_ec_edi.view_move_invoice_customization_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='l10n_latam_document_type_id']" position="after">
            		<field name="l10n_ec_available_sri_tax_support_ids" invisible="1"/>
					<field name="l10n_ec_sri_tax_support_id"
						attrs="{'invisible': ['|', ('l10n_latam_country_code', '!=', 'EC'), ('type', 'not in', ('in_invoice', 'in_refund'))], 
								'required': [('l10n_latam_country_code', '=', 'EC'), ('type', 'in', ('in_invoice', 'in_refund'))]}"
						domain="[('id', 'in', l10n_ec_available_sri_tax_support_ids)]" options="{'no_open': True, 'no_create': True}"/>
            	</xpath>
            </field>
        </record>

    </data>
</odoo>