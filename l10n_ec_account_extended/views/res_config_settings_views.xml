<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.account</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='default_taxes_setting_container']" position="after">
                    <h2>Retenciones</h2>
                    <div class="row mt16 o_settings_container" name="withholding_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                             id="default_withholdings">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Emitir Retenciones" for="l10n_ec_issue_withholds" class="col-lg-3 o_light_label"/>
                                        <field name="l10n_ec_issue_withholds" widget="boolean_toggle"/>
                                    </div>
                                    <div class="row" attrs="{'invisible':[('l10n_ec_issue_withholds', '!=', True)]}">
                                        <label string="Retención Consumibles" for="l10n_ec_fallback_profit_withhold_goods" class="col-lg-3 o_light_label"/>
                                        <field name="l10n_ec_fallback_profit_withhold_goods" domain="[('tax_group_id.l10n_ec_type', '=', 'withhold_income_tax'), ('company_id', '=', company_id)]"/>
                                    </div>
                                    <div class="row" attrs="{'invisible':[('l10n_ec_issue_withholds', '!=', True)]}">
                                        <label string="Retención Servicios" for="l10n_ec_fallback_profit_withhold_services" class="col-lg-3 o_light_label"/>
                                        <field name="l10n_ec_fallback_profit_withhold_services" domain="[('tax_group_id.l10n_ec_type', '=', 'withhold_income_tax'), ('company_id', '=', company_id)]"/>
                                    </div>
                                    <div class="row" attrs="{'invisible':[('l10n_ec_issue_withholds', '!=', True)]}">
                                        <label string="Retención Tarjeta Credito" for="l10n_ec_profit_withhold_tax_credit_card" class="col-lg-3 o_light_label"/>
                                        <field name="l10n_ec_profit_withhold_tax_credit_card" domain="[('tax_group_id.l10n_ec_type', '=', 'withhold_income_tax'), ('company_id', '=', company_id)]"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
