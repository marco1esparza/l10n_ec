<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_partner_property_form_withhold_tax" model="ir.ui.view">
		<field name="name">view.partner.property.form.withhold.tax</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="account.view_partner_property_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='property_supplier_payment_term_id']" position="after">
				<field name="property_l10n_ec_profit_withhold_tax_id"/>
				<button name='l10n_ec_change_to_microenterprise' string="Cambiar a Microempresa" 
					type="object"
					confirm="¿Está seguro que quiere convertir este cliente a microempresa? Si acepta, se configurará el impuesto 346 (Microempresas 1.75)"/>
			</xpath>
		</field>
	</record>

</odoo>
